    #AHHHHHHH {
        stroke: #ce2d2d;
        stroke-dasharray: 81, 943;
    }

    #needle {
        fill: #66B9BF;
    }

    .faces {
        position: absolute;
        width: 20%;
        height: 20%;
        top: 37%;
        left: 40%;
    }

        .faces #YAS, .faces #Yeah, .faces #Mmkay, .faces #Owwwww, .faces #AHHHHHHH {
            visibility: hidden;
        }

    #slider, #level {
        position: absolute;
    }

    h1 {
        position: absolute;
        top: 60%;
        left: 0;
        margin: auto;
        right: 0;
        font-size: 1.5em;
    }

    #slider {
        cursor: pointer;
        left: 0;
        margin: auto;
        right: 0;
        top: 70%;
        width: 50%;
        -webkit-appearance: none;
        border-radius: 10px;
        height: 15px;
        background-color: #66B9BF;
    }

        #slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            height: 20px;
            width: 15px;
            border-radius: 3px;
            background: #ffffff;
            cursor: pointer;
        }

        #slider:focus {
            outline: none;
        }

    #level {
        color: black;
        font-size: 15pt;
        font-weight: bold;
        top: 75%;
        width: 10%;
        left: 45%;
        visibility: hidden;
        font-size: .9em;
