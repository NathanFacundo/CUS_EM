    }



    #container {
        position: relative;
        display: inline-block;
        text-align: center;
        color: #EEAA7B;
        font-family: 'Montserrat', sans-serif;
    }

    #scale {
        transform: rotateX(180deg);
        stroke-width: 50;
        fill: none;
    }

    #YAS {
        stroke: #29ce58;
        stroke-dasharray: 471, 943;
    }

    #Yeah {
        stroke: #87d19c;
        stroke-dasharray: 393, 943;
    }

    #Mmkay {
