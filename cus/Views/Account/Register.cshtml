@model CUS.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <!-- Register Content -->
                <div class="account-content">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7 col-lg-6 login-left">
                            <img src="~/Content/assets/img/login-banner.png" class="img-fluid" alt="Doccure Register">
                        </div>
                        <div-- class="col-md-12 col-lg-6 login-right">
                            <div class="login-header">
                                <h3>Registro de Usuario <!--a href="doctor-register.html">Are you a Doctor?</a--></h3>
                            </div>

                            <!-- Register Form -->
                            <!--form action="https://dreamguys.co.in/demo/doccure/doctor-dashboard.html"-->
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    <div class="form-group form-focus">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control floating" })
                                        @Html.LabelFor(m => m.Email, new { @class = "focus-label" })
                                    </div>


                                    <!---div class="form-group form-focus">
                                        <input type="text" class="form-control floating">
                                        <label class="focus-label">Mobile Number</label>
                                    </div-->


                                    <!--div class="form-group form-focus">
                                        <input type="password" class="form-control floating">
                                        <label class="focus-label">Create Password</label>
                                    </div-->

                                    <div class="form-group form-focus">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control floating" })
                                        @Html.LabelFor(m => m.Password, new { @class = "focus-label" })
                                    </div>


                                    <div class="form-group form-focus">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control floating" })
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "focus-label" })
                                    </div>

                                    @*<div class="text-right">
                                        <a class="forgot-link" href="@Url.Action("Login", "Account")">¿Ya tienes una cuenta?</a>
                                    </div>*@
                                    <button class="btn btn-primary btn-block btn-lg login-btn" type="submit">Registrarme</button>
                                    @*<div class="login-or">
                                        <span class="or-line"></span>
                                        <span class="span-or">or</span>
                                    </div>*@
                                    <!--div class="row form-row social-login">
                                        <div class="col-6">
                                            <a href="#" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f mr-1"></i> Login</a>
                                        </div>
                                        <div class="col-6">
                                            <a href="#" class="btn btn-google btn-block"><i class="fab fa-google mr-1"></i> Login</a>
                                        </div>
                                    </div-->
                                }
                                <!-- /Register Form -->

                    </div>
                </div>
            </div>
            <!-- /Register Content -->

        </div>
    </div>

</div>

</div>